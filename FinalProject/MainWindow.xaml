<Window x:Class="FinalProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject"
        mc:Ignorable="d"
        Title="MainWindow" Width="551" Height="678.5">
    <Grid Margin="0,0,-5,-1">
        <Menu Height="22" VerticalAlignment="Top" RenderTransformOrigin="0.589,0.519" Foreground="#FF302A2A" BorderBrush="#FF302C2C" Width="545">
            <MenuItem Header="Search Invoices" Click="SearchForInvoiceBtn_Click"></MenuItem>
            <MenuItem Header="Update Item Def" Click="UpdateDefTableBtn_Click"></MenuItem>
        </Menu>
        <GroupBox x:Name="InvoiceInfoGroupBx" Header="Invoice Info" HorizontalAlignment="Left" Height="194" Margin="209,27,0,0" VerticalAlignment="Top" Width="332" BorderBrush="#FF616466">
            <Grid HorizontalAlignment="Left" Height="172" Margin="0,0,-2,-3" VerticalAlignment="Top" Width="322">
                <Grid HorizontalAlignment="Left" Height="101" Margin="166,27,0,0" VerticalAlignment="Top" Width="146">
                    <TextBox x:Name="TotalTxtBx" Height="34" Margin="19,49,19,0" TextWrapping="Wrap" Text="$0.00" VerticalAlignment="Top" FontSize="18" TextChanged="TotalTxtBx_TextChanged" VerticalContentAlignment="Center"/>
                    <Label x:Name="InvoiceTotalLbl" Content="Total" Margin="18,10,18,0" VerticalAlignment="Top" Height="34" FontSize="18" HorizontalContentAlignment="Center"/>
                </Grid>
                <ComboBox x:Name="InvoiceNumberComBx" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="InvoiceNumberComBx_SelectionChanged"/>
                <Label x:Name="InvoiceNumLbl" Content="Invoice Number:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="104" RenderTransformOrigin="0.5,-0.712"/>
                <Label x:Name="InvoiceDateLbl" Content="Invoice Date :" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" Width="88"/>
                <DatePicker x:Name="InvoiceDatePicker" HorizontalAlignment="Left" Margin="10,96,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.488,-0.104"/>
                <Button x:Name="SaveBtn" Content="Save" Margin="121,133,121,0" VerticalAlignment="Top" IsEnabled="False" Height="26"/>
            </Grid>
        </GroupBox>
        <DataGrid HorizontalAlignment="Left" Height="283" Margin="10,318,0,0" VerticalAlignment="Top" Width="531" BorderBrush="#FF777F87"/>
        <Button x:Name="RemoveItemButton" Content="Remove Item" HorizontalAlignment="Left" Margin="455,606,0,0" VerticalAlignment="Top" Width="86" Height="26"/>
        <Grid HorizontalAlignment="Left" Height="128" Margin="10,62,0,0" VerticalAlignment="Top" Width="174">
            <Button x:Name="CreateInvoiceBtn" Content="Create Invoice" HorizontalAlignment="Left" VerticalAlignment="Top" Width="128" Click="CreateInvoiceBtn_Click" Height="25" Margin="20,15,0,0"/>
            <Button x:Name="EditInvoiceBtn" Content="Edit Invoice" Click="EditInvoiceBtn_Click" Margin="20,50,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="129"/>
            <Button x:Name="DeleteInvoiceBtn" Content="Delete Invoice" Click="DeleteInvoiceBtn_Click" RenderTransformOrigin="4.961,3.76" Margin="20,86,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="128"/>
        </Grid>
        <GroupBox Header="Items" Height="87" Margin="10,226,92,0" VerticalAlignment="Top">
            <Grid Margin="10,0,-2,-1" Height="65" VerticalAlignment="Bottom">
                <Label x:Name="ItemLbl" Content="Item : " HorizontalAlignment="Left" Margin="10,0,0,37" RenderTransformOrigin="0.397,1.269" Width="62" Height="26" VerticalAlignment="Bottom"/>
                <Label x:Name="ItemPriceLbl" Content="Price:" HorizontalAlignment="Left" Margin="179,0,0,37" VerticalAlignment="Bottom" RenderTransformOrigin="0.542,-0.269" Width="84"/>
                <ComboBox x:Name="ItemDropDownBox" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="143" IsEnabled="False" SelectionChanged="ItemDropDownBox_SelectionChanged" RenderTransformOrigin="0.179,0.591"/>
                <TextBox x:Name="ItemPriceTxtBx" HorizontalAlignment="Left" Height="22" Margin="179,0,0,10" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="86" TextChanged="ItemPriceTxtBx_TextChanged" IsEnabled="False"/>
                <Button x:Name="Add_UpdateBtn" Content="Add Item" Margin="334,0,10,10" VerticalAlignment="Bottom" RenderTransformOrigin="0.747,0.6" Height="26"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
